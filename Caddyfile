https://localhost {
    tls /certs/dev.crt /certs/dev.key

    # Default route â†’ Ingestion service
    reverse_proxy ingestion:5283

    # Ingestion metrics
    handle_path /ingestion/metrics* {
        reverse_proxy ingestion:5283
