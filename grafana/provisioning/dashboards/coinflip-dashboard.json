{
  "title": "Coinflip Parade - Ingestion & Persistence",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "Ingestion Request Rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_total{service=\"ingestion\"}[1m])",
          "legendFormat": "Ingestion Requests/sec"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Persistence Request Rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_total{service=\"persistence\"}[1m])",
          "legendFormat": "Persistence Requests/sec"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "graph",
      "title": "Kafka Consumer Lag",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "kafka_consumer_lag{service=\"ingestion\"}",
          "legendFormat": "Kafka Lag"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "heatmap",
      "title": "DB Query Duration (Persistence)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(db_query_duration_seconds_bucket{service=\"persistence\"}[5m])",
          "legendFormat": "{{le}}"
        }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Service Uptime",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 4 }
    }
  ]
}
